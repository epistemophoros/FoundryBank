<form class="create-economy-form">
  <div class="form-group">
    <label for="economy-name">Economy Name *</label>
    <input type="text" id="economy-name" name="name" required placeholder="e.g., Kingdom of Eldoria" />
  </div>
  
  <div class="form-group">
    <label for="economy-description">Description</label>
    <textarea id="economy-description" name="description" rows="3" placeholder="Description of the economy"></textarea>
  </div>

  <div class="form-group">
    <label for="economy-type">Type *</label>
    <select id="economy-type" name="type" required>
      {{#each types}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="economy-growth">Growth Rate (-100% to +100%)</label>
    <input type="number" id="economy-growth" name="growthRate" min="-1" max="1" step="0.01" value="0" />
  </div>

  <div class="form-group">
    <label for="economy-interest">Base Interest Rate (0% to 100%)</label>
    <input type="number" id="economy-interest" name="interestRate" min="0" max="1" step="0.01" value="0.02" />
  </div>
</form>


<form class="transaction-form">
  <div class="form-group">
    <label>{{localize "FOUNDRYBANK.Account"}}</label>
    <div class="account-info">
      <strong>{{account.accountName}}</strong>
      <span class="account-balance">Balance: {{account.balance}} {{account.currency}}</span>
    </div>
  </div>

  <div class="form-group">
    <label for="transaction-amount">{{localize "FOUNDRYBANK.Amount"}}</label>
    <input type="number" id="transaction-amount" name="amount" 
           min="0.01" step="0.01" required 
           placeholder="0.00" />
    <span class="currency-label">{{account.currency}}</span>
  </div>

  <div class="form-group">
    <label for="transaction-description">{{localize "FOUNDRYBANK.Description"}}</label>
    <textarea id="transaction-description" name="description" 
              rows="3" 
              placeholder="{{localize "FOUNDRYBANK.DescriptionPlaceholder"}}"></textarea>
  </div>
</form>


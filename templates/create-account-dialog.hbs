<form class="create-account-form">
  <div class="form-group">
    <label for="account-name">{{localize "FOUNDRYBANK.AccountName"}}</label>
    <input type="text" id="account-name" name="accountName" required 
           placeholder="{{localize "FOUNDRYBANK.AccountNamePlaceholder"}}" />
  </div>
  
  <div class="form-group">
    <label for="account-currency">{{localize "FOUNDRYBANK.Currency"}}</label>
    <select id="account-currency" name="currency">
      {{#each currencies}}
        <option value="{{this}}" {{#if (eq this 'gp')}}selected{{/if}}>{{this}}</option>
      {{/each}}
    </select>
  </div>
</form>


<form class="create-currency-form">
  <div class="form-group">
    <label>Economy: <strong>{{economy.name}}</strong></label>
  </div>

  <div class="form-group">
    <label for="currency-symbol">Symbol *</label>
    <input type="text" id="currency-symbol" name="symbol" required placeholder="e.g., GC, AXT" maxlength="10" />
  </div>
  
  <div class="form-group">
    <label for="currency-name">Name *</label>
    <input type="text" id="currency-name" name="name" required placeholder="e.g., Gold Crown" />
  </div>

  <div class="form-group">
    <label for="currency-plural">Plural Name *</label>
    <input type="text" id="currency-plural" name="pluralName" required placeholder="e.g., Gold Crowns" />
  </div>

  <div class="form-group">
    <label for="currency-rate">Exchange Rate (to gp) *</label>
    <input type="number" id="currency-rate" name="exchangeRate" min="0.01" step="0.01" value="1.0" required />
    <small>1 {{symbol}} = ? gold pieces</small>
  </div>

  <div class="form-group">
    <label>
      <input type="checkbox" id="currency-base" name="isBaseCurrency" />
      Set as base currency for this economy
    </label>
  </div>
</form>


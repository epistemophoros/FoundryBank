<form class="create-stock-form">
  <div class="form-group">
    <label for="stock-symbol">Symbol *</label>
    <input type="text" id="stock-symbol" name="symbol" required placeholder="e.g., ELDR" maxlength="10" />
  </div>
  
  <div class="form-group">
    <label for="stock-name">Company Name *</label>
    <input type="text" id="stock-name" name="name" required placeholder="e.g., Eldoria Trading Company" />
  </div>

  <div class="form-group">
    <label for="stock-currency">Currency *</label>
    <select id="stock-currency" name="currencyId" required>
      <option value="">Select Currency</option>
      {{#each economies}}
        {{#each (lookup ../currencies this.id)}}
          <option value="{{this.id}}">{{this.symbol}} - {{this.name}}</option>
        {{/each}}
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="stock-price">Initial Price *</label>
    <input type="number" id="stock-price" name="price" min="0.01" step="0.01" required />
  </div>

  <div class="form-group">
    <label for="stock-volatility">Volatility (0% to 100%)</label>
    <input type="number" id="stock-volatility" name="volatility" min="0" max="1" step="0.01" value="0.1" />
    <small>Higher volatility = more price fluctuation</small>
  </div>
</form>


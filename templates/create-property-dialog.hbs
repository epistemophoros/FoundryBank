<form class="create-property-form">
  <div class="form-group">
    <label for="property-name">Property Name *</label>
    <input type="text" id="property-name" name="name" required placeholder="e.g., Grand Estate" />
  </div>
  
  <div class="form-group">
    <label for="property-description">Description</label>
    <textarea id="property-description" name="description" rows="3" placeholder="Property description"></textarea>
  </div>

  <div class="form-group">
    <label for="property-type">Type *</label>
    <select id="property-type" name="type" required>
      {{#each types}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="property-economy">Economy *</label>
    <select id="property-economy" name="economyId" required>
      <option value="">Select Economy</option>
      {{#each economies}}
        <option value="{{this.id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="property-bank">Bank (Optional)</label>
    <select id="property-bank" name="bankId">
      <option value="">No specific bank</option>
      {{#each banks}}
        <option value="{{this.id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="property-currency">Currency *</label>
    <select id="property-currency" name="currencyId" required>
      <option value="">Select Currency</option>
      <!-- Will be populated dynamically based on selected economy -->
    </select>
  </div>

  <div class="form-group">
    <label for="property-price">Purchase Price *</label>
    <input type="number" id="property-price" name="price" min="0.01" step="0.01" required />
  </div>

  <div class="form-group">
    <label for="property-location">Location</label>
    <input type="text" id="property-location" name="location" placeholder="e.g., Capital District" />
  </div>

  <div class="form-group">
    <label for="property-income">Monthly Income (Optional)</label>
    <input type="number" id="property-income" name="income" min="0" step="0.01" />
  </div>

  <div class="form-group">
    <label for="property-expenses">Monthly Expenses (Optional)</label>
    <input type="number" id="property-expenses" name="expenses" min="0" step="0.01" />
  </div>
</form>


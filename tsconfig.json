{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./scripts",
    "rootDir": "./src",
    "typeRoots": ["./src", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "scripts"]
}

